{
  "name": "@vikadata/vika",
  "version": "0.0.1",
  "description": "维格表官方 JavaScript SDK",
  "main": "./lib/index.js",
  "scripts": {
    "test": "jest",
    "build": "tsc && webpack",
    "clean": "rm lib/**/(*.d.ts|*.js)",
    "lint": "eslint lib/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikadata/vika.git"
  },
  "keywords": [
    "vikadata",
    "vika js sdk"
  ],
  "author": "vikadata",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vikadata/vika/issues"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "eslint"
    }
  },
  "lint-staged": {
    "packages/*/src/**/!(*system_config|strings).{js,ts,tsx}": "tslint"
  },
  "homepage": "https://github.com/vikadata/vika#readme",
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.6.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".(spec|test).ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleDirectories": [
      "node_modules"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "axios": "^0.19.2"
  }
}